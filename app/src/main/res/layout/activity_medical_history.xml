<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wavebackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User | Medical History"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Patient Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LabelStyle"
            android:text="Patient Name" />
        <EditText
            android:id="@+id/etMName"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#FFFFFF"
            android:hint="Patient Name"
            android:layout_marginBottom="16dp" />

        <!-- Contact Number -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LabelStyle"
            android:text="Patient Contact Number" />
        <EditText
            android:id="@+id/etMContactNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone"
            android:minHeight="48dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LabelStyle"
            android:text="Patient Email" />
        <EditText
            android:id="@+id/etMEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Gender -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LabelStyle"
            android:text="Patient Gender" />
        <EditText
            android:id="@+id/etGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:inputType="text"
            android:minHeight="48dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Create Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LabelStyle"
            android:text="Create Date" />
        <EditText
            android:id="@+id/etMCreateDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:minHeight="48dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Updated Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LabelStyle"
            android:text="Updated Date" />
        <EditText
            android:id="@+id/etMUpdatedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Date"
            android:minHeight="48dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Action -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LabelStyle"
            android:text="Action" />
        <EditText
            android:id="@+id/etMAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Success / Canceled"
            android:inputType="textCapWords"
            android:minHeight="48dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#00BCD4"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
